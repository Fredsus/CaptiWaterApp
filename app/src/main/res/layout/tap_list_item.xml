<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/pic_bluetap"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/tap_blue"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/tapWater_text"
        android:text="Tap"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/title_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/pic_bluetap"/>

    <Switch
        android:id="@+id/tap_switch"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
       android:enabled="true"
        android:layout_toStartOf="@id/three_dotss"/>

    <ImageView
        android:id="@+id/three_dotss"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/three_dots" />

</RelativeLayout>